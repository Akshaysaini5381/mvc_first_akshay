@model mvc_first_akshay.Models.Class1
@{
    ViewBag.Title = "AddForm";
}

<h2>AddForm</h2>

@using (Html.BeginForm("AddForm", "Home", FormMethod.Post))
{
    @Html.HiddenFor(a=>a.id)
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Enter the name"})
        @Html.ValidationMessageFor(m=>m.name,"",new {@class="str" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Enter the name" })
        @Html.ValidationMessageFor(m => m.email, "", new { @class = "str" })
    </div>

    <div class="form-group">
        <label>Phone</label>
        @Html.TextBoxFor(m => m.phone, new { @class = "form-control", @placeholder = "Enter the name" })
        @Html.ValidationMessageFor(m => m.phone, "", new { @class = "str" })
    </div>

    <div class="form-group">
        <label>City</label>
        @Html.TextBoxFor(m => m.city, new { @class = "form-control", @placeholder = "Enter the name"})
        @Html.ValidationMessageFor(m => m.city, "", new { @class = "str" })
    </div>
    <button class="btn btn-success" type="submit">Submit</button>
    <button class="btn btn-info" type="reset">Reset</button>
}
